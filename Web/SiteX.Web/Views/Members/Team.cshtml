@using Microsoft.AspNetCore.Html
@model ICollection<SiteX.Data.Models.Team.Member>
@{
    this.ViewData["Title"] = "Team";
   
}
    
<div class="col">
    <div class="row">
        <div class="col">
            @foreach (var member in Model)
            {
                <div class="row-md-10">
                    <div class="card flex-md-row mb-4 box-shadow h-md-250">
                        <div class="card-body d-flex flex-column align-items-start">
                             
                            <h3 class="mb-0">
                                <a class="text-dark" asp-action="ById" asp-route-id="@member.Id">@member.FirstName @member.LastName</a>
                            </h3>
                            <p class="card-text mb-auto"> @(new HtmlString(@member.Description))</p>
                        </div>
                        <img class="card-img-right flex-auto d-none d-md-block" src="@member.Picture" style="width: 400px; height: 400px;">
                    </div>
                </div>
            }
        </div>
    </div>
</div>




<style>

    .block--0-section-- {
        background-color: !important;
    }

        .block--0-section-- h2,
        .block--0-section-- h3,
        .block--0-section-- .rte,
        .block--0-section-- .rte * {
            color: !important;
        }
</style>


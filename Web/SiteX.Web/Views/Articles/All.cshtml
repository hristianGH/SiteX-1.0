@using Microsoft.AspNetCore.Html
 @using SiteX.Common
@model SiteX.Web.ViewModels.ArticleViewModels.AllArticleViewModel
@{
    this.ViewData["Title"] = "Article";
}



<div class="col">
    <div class="row">
        <div class="col">
            @foreach (var article in Model.Articles)
            {
                <div class="row-md-10">
                    <div class="card flex-md-row mb-4 box-shadow h-md-250">
                        <div class="card-body d-flex flex-column align-items-start">
                            <div class="btn-group">
                                @if (article.IdLink != null)
                                {
                                    
                                        <button type="button" class="btn btn-sm btn-outline-secondary">@article.IdLink</button>
                                }
                            </div>
                            <h3 class="mb-0">
                                <a class="text-dark" asp-action="ById" asp-route-id="@article.Id">@article.Title</a>
                            </h3>
                            <p class="card-text mb-auto"> </p>
                            <a href="#">Continue reading</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<partial name="_PagingPartial" model="Model" />

